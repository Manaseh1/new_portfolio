  },
  "dependencies": {
    "express": "^4.18.2",
    "nodemailer": "^6.9.4",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1"
  },
  "repository": {
